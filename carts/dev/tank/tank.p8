pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
x,y=64-4,64-4

function _init()
  p={} --player
  p.t,p.f,p.s=0,1,4 --tick,frame,step
  p.sp={1,2,1,2,1,2} --sprites
end

function _update()
  input()
  animate(p)
end

function _draw()
  cls()
  spr(p.sp[p.f],x,y)
end

function input()
  if (btn(0) and x > 0) x -= 1
  if (btn(1) and x < 127) x += 1
  if (btn(2) and y > 0) y -= 1
  if (btn(3) and y < 127) y += 1
  if (btn(4) and c > 1) c -= 1
  if (btn(5) and c < 15) c += 1
end

--animate an object
function animate(o)
  o.t=(o.t+1)%o.s --tick fwd
  if (o.t==0) o.f=o.f%#o.sp+1
end

